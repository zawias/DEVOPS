FROM alpine:3.6
LABEL maintainer="Maciej Krajewski"
LABEL description="Apache + PHP"
ENV PHPVERSION 5

RUN apk add --update apache2 php${PHPVERSION}-apache2 php${PHPVERSION} && \
        rm -rf /var/cache/apk/* && \
        mkdir /run/apache2/ && \
        rm -rf /var/www/localhost/htdocs/index.html 

EXPOSE 80/tcp
VOLUME /var/www/localhost/htdocs/

ENTRYPOINT ["httpd"]
CMD ["-D", "FOREGROUND"]
